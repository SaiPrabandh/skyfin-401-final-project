    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const freelancersCarousel = document.querySelector('.freelancers-carousel');
            const reviewsCarousel = document.querySelector('.reviews-carousel');
        
            let freelancerIndex = 0;
            let reviewIndex = 0;
        
            function cycleFreelancers() {
                const freelancers = document.querySelectorAll('.freelancer');
                freelancers.forEach((freelancer, index) => {
                    if (index >= freelancerIndex && index < freelancerIndex + 4) {
                        freelancer.style.display = 'block';
                    } else {
                        freelancer.style.display = 'none';
                    }
                });
        
                freelancerIndex = (freelancerIndex + 4) % freelancers.length;
            }
        
            function cycleReviews() {
                const reviews = document.querySelectorAll('.review');
                reviews.forEach((review, index) => {
                    if (index >= reviewIndex && index < reviewIndex + 4) {
                        review.style.display = 'block';
                    } else {
                        review.style.display = 'none';
                    }
                });
        
                reviewIndex = (reviewIndex + 4) % reviews.length;
            }
        
            cycleFreelancers();
            cycleReviews();
            setInterval(cycleFreelancers, 5000);
            setInterval(cycleReviews, 5000);
        });
    </script>
